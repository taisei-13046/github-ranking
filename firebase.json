{
  "emulators": {
    "firestore": {
      "host": "0.0.0.0",
      "port": "8080"
    },
    "auth": {
      "host": "0.0.0.0",
      "port": "9099"
    },
    "ui": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": "4000"
    },
    "hosting": {
      "port": 5000
    }
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
